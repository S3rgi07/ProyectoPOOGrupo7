<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="root" xmlns:fx="http://javafx.com/fxml"
    fx:controller="ui.controllers.LoginController"
    prefWidth="430" prefHeight="540"
    styleClass="login-root">


    <children>
        <VBox spacing="22" alignment="CENTER"
            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

            <!-- Título y subtítulo -->
            <VBox alignment="CENTER" spacing="4">
                <Label text="UVRate" styleClass="login-title" />
                <Label text="Inicia sesión" styleClass="login-subtitle" />
            </VBox>

            <!-- Campos -->
            <VBox spacing="10" alignment="CENTER" maxWidth="320">
                <TextField fx:id="correoField"
                    promptText="Correo institucional"
                    styleClass="input-field" />
                <PasswordField fx:id="passwordField"
                    promptText="Contraseña"
                    styleClass="input-field" />
            </VBox>

            <!-- Mensaje de error / éxito -->
            <Label fx:id="messageLabel" text=""
                styleClass="message-label" />

            <!-- Botones -->
            <VBox spacing="10" alignment="CENTER" maxWidth="260">

                <Button fx:id="loginButton"
                    text="Ingresar"
                    styleClass="primary-button"
                    prefWidth="260"
                    onAction="#onLogin" />

                <Button fx:id="registroButton"
                    text="Crear cuenta"
                    styleClass="secondary-button"
                    prefWidth="260"
                    onAction="#onRegistro" />
            </VBox>

        </VBox>
    </children>

</AnchorPane>
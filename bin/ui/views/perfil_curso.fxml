<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
  fx:controller="ui.controllers.PerfilCursoController"
  styleClass="perfil-root"
  fx:id="perfilCursoRoot">


  <!-- ===================== TOP BAR ===================== -->
  <top>
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="perfil-topbar">
      <padding>
        <Insets top="15" bottom="15" left="20" right="20" />
      </padding>

      <Button fx:id="btnVolver"
        text="Volver"
        styleClass="btn-volver" />
    </HBox>
  </top>

  <Label text="← Regresar a Cursos"
    onMouseClicked="#volverCursos"
    styleClass="small-link"
    style="-fx-cursor: hand;" />


  <!-- ===================== CONTENIDO CENTRAL ===================== -->
  <center>
    <VBox spacing="25" alignment="TOP_CENTER" styleClass="perfil-card">
      <padding>
        <Insets top="30" bottom="30" left="40" right="40" />
      </padding>

      <!-- Nombre -->
      <Label fx:id="lblNombre" styleClass="perfil-nombre" />

      <!-- Código -->
      <Label fx:id="lblCodigo" styleClass="curso-codigo" />

      <!-- Tipo -->
      <Label fx:id="lblTipo" styleClass="curso-tipo" />

      <!-- Descripción -->
      <VBox spacing="10" maxWidth="500">
        <Label text="Descripción:" styleClass="section-title" />
        <Label fx:id="lblDescripcion" wrapText="true" styleClass="section-text" />
      </VBox>

      <!-- Competencias -->
      <VBox spacing="10" maxWidth="500">
        <Label text="Competencias:" styleClass="section-title" />
        <Label fx:id="lblCompetencias" wrapText="true" styleClass="section-text" />
      </VBox>

      <HBox spacing="30" alignment="TOP_CENTER">

        <VBox spacing="10">
          <Label text="Ranking por Upvotes" styleClass="section-title" />
          <VBox fx:id="boxRankingUpvotes" spacing="5" />
        </VBox>

        <VBox spacing="10">
          <Label text="Ranking por Semestres" styleClass="section-title" />
          <VBox fx:id="boxRankingSemestres" spacing="5" />
        </VBox>

      </HBox>


    </VBox>
  </center>

</BorderPane>